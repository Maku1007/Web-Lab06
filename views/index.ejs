<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title> Empolyee Details </title>

        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA==" crossorigin="anonymous" />
        <link href="https://fonts.googleapis.com/css?family=Lato:100"     rel="stylesheet">
        <link href="/styles.css" rel="stylesheet">
    </head>
    <body>
        <div class="container">
            <h2> Employee Details </h2>
            <form action ="/addemp" method="POST">
                <input type="hidden" name="id">
                <label for="name">Name</label><br>
                <input type="text" name="newEmpName" placeholder="Your name..." required>
                <label for="email">Email Address</label><br>
                <input type="email" name="newEmpEmail" placeholder="Your email address..." required>
                <label for="phone">Phone</label><br>
                <input type="tel" name="newEmpPhone" placeholder="Your phone number... (123-45-678)" pattern="[0-9]{3}-[0-9]{2}-[0-9]{3}" required>
                <button>Add New Employee</button>
            </form>
            <table class="table">
                <tr>
                    <th>Name</th>
                    <th>Email Address</th>
                    <th>Phone</th>
                    <th>Actions</th>
                </tr>
                <% for(var i = 0; i < users.length; i++) { %>
                <tr>
                    <td><%= users[i].name %></td>
                    <td><%= users[i].email %></td>
                    <td><%= users[i].phone %></td>
                    <td>
                        <a href="edit/<%= users.id %>" class="btn border-shadow update">
                            <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
                        </a>
                        <a href="delete/<%= users.id %>"  class="btn border-shadow delete" >
                            <span class="text-gradient"><i class="fas fa-times"></i></span>
                        </a>
                    </td>
                </tr> 
                <% } %>
            </table>
        </div>
    </body>
</html>